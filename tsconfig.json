{
	"compilerOptions": {
		"target": "ES2020",
		"checkJs": true,
		"module": "ES2022",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"noEmit": true,
		"strict": true,
		"verbatimModuleSyntax": true,
		"types": ["react/experimental", "react-dom/experimental", "vite/client"],
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"paths": {
			"shared/*": ["src/shared/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
