{
	"compilerOptions": {
		"target": "ES2020",
		"checkJs": true,
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"noEmit": true,
		"strict": true,
		"verbatimModuleSyntax": true,
		"types": ["react/experimental", "react-dom/experimental"],
		"allowImportingTsExtensions": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
